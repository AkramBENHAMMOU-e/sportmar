{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "client"]
}
